{% extends 'base.html.twig' %}

{% block title %}Activite{% endblock %}

{% block body %}

<main id="main">

    <!-- ======= Breadcrumbs Section ======= -->
    <section class="breadcrumbs">
      <div class="container">

        <div class="d-flex justify-content-between align-items-center">
          <h2>Activite</h2>
          <ol>
            <li><a href="{{path('app_home')}}">Accueil</a></li>
            <li>Activite</li>
          </ol>
        </div>

      </div>
    </section><!-- End Breadcrumbs Section -->

  
    <section id="portfolio" class="portfolio ">
      <div class="container" data-aos="fade-up" data-aos-delay="100">

        <div class="section-title">
          <h2>Nos activites</h2>
          <p>
          Decouvrez toutes nos activites
          </p>
        </div>

        <div class="row">
          <div class="col-lg-12">
            <ul id="portfolio-flters">
              <li data-filter="*" class="filter-active">Tous</li>
              {% for i in types %}
              <li data-filter=".{{"filter-"~i.id}}">{{i.label | upper }}</li>

              {% endfor %}
            </ul>
          </div>
        </div>

        <div class="row portfolio-container">
          {% for i in activities %}
            <div class="col-lg-4 col-md-6 portfolio-item {{"filter-"~i.id}}">
              <div class="portfolio-wrap">
                <img src="{{ asset('images/'~ i.path) }}" class="img-fluid" alt="">
                <div class="portfolio-info">
                  <h4>{{i.title | upper }}</h4>
                  <div class="portfolio-links">
                    <a href="{{ asset('images/'~ i.path) }}" data-gallery="portfolioGallery" class="portfolio-lightbox" title="Apercu"><i class="bi bi-eye"></i></a>
                    <a href="" title="Voir plus"><i class="bi bi-link"></i></a>
                  </div>
                </div>
              </div>
            </div>

          {% endfor %}

         

         
        </div>

      </div>
    </section>

  </main>
   
{% endblock %}
